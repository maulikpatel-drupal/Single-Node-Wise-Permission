<article>

	<header>
		{{ title_prefix }}
		{% if label and not page %}
			<h2{{title_attributes.addClass('node__title')}}>
				<a href="{{ url }}" rel="bookmark">{{ label }}</a>
			</h2>
		{% endif %}
		{{ title_suffix }}
		{% if display_submitted %}
			<div class="node__meta">
				{{ author_picture }}
				<span{{author_attributes}}>
					{% trans %}Submitted by
					{{ author_name }}
					on
					{{ date }}{% endtrans %}
				</span>
				{{ metadata }}
			</div>
		{% endif %}


		{% if  role_test == 'authenticated' and show_approve_block == 'no'%}
			<a href='{{ path }}/editor/{{ user_id }}/{{ node_id }}' style="border: 1px solid red;color:grey">Become an editor</a>
		{% endif %}

	</header>
	{% if show_approve_block == 'yes' %}
		{{ drupal_block('topicxuser_custom_block') }}
	{% endif %}
	<div{{content_attributes.addClass('node__content','clearfix')}}>
		{{ content }}

	</div>
</article>
